<div id="centent" class="row">
  <div class="col-3"></div>
  <div class="col-6">
<h2><%= schedules[0].first_name %>'s details and schedules</h2>
<br>
    <div>
        <p><strong>First name: </strong><%= schedules[0].first_name %></p>
        <p><strong>Last name: </strong><%= schedules[0].sur_name %></p>
        <p><strong>Email address: </strong><%= schedules[0].email %></p>
    </div>
    <br>
    <table id = "scheduleList" class="table table-striped table-hover">
        <tr>
          <th>Day</th>
          <th>Start at</th>
          <th>End at</th>
        </tr>
        <% schedules.forEach((schedule)=>{%>
        <tr>
          <% switch (schedule.day) {
            case 1: %>
            <td>Monday</td>
          <% break;
            case 2: %>
            <td>Tuesday</td>
          <% break;
            case 3: %>
            <td>Wednesday</td>
            <% break;
            case 4: %>
            <td>Thursday</td>
            <% break;
            case 5: %>
            <td>Friday</td>
          <% break;
          case 6: %>
            <td>Saturday</td>
          <% break;
          case 7: %>
            <td>Sunday</td>
          <% break;
            default:
            break; } %>
          <td><%= schedule.start_at %></td>
          <td><%= schedule.end_at %></td>
        </tr>
        <% }) %> 
      </table>
    </div>
    <div class="col-3"></div>
      </div>