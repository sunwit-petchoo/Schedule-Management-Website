<% if (message.length > 0) { %> 
  <div id="alert" class="alert <%= msgStatus %>" role="alert">
    <%= message %>
  </div>
  <% } %>
  <div class="alert alert-danger" role="alert" id="signupMsg">
  </div>
<div id="centent" class="row">
  <div class="col-3"></div>
  <div class="col-6">
<form action="/signup" method="POST">
    <label for="fname" class="col-sm-2 col-form-label">First Name</label><br />
    <input
      type="text"
      id="fname"
      name="fname"
      value=""
      class="form-control"
      required
    /><br />
    <label for="sname" class="col-sm-2 col-form-label">Last Name</label><br />
    <input
      type="text"
      id="sname"
      name="sname"
      value=""
      class="form-control"
      required
    /><br />
    <label for="email" class="col-sm-2 col-form-label">Email</label><br />
    <input
      type="text"
      id="email"
      name="email"
      value=""
      class="form-control"
      required
    /><br />
    <label for="password" class="col-sm-2 col-form-label">Password</label><br />
    <input
      type="password"
      id="password"
      name="password"
      value=""
      class="form-control"
      required
    /><br />
    <label for="confirmPassword" class="col-sm-3 col-form-label">Confirm Password</label><br />
    <input
      type="password"
      id="confirmPassword"
      name="confirmPassword"
      value=""
      class="form-control"
      required
    /><br />
    <div>
      <p class="text-danger">Password must contain:<br>
      Minimum eight characters, at least one uppercase letter, one lowercase letter, one number and one special character</p></div>
    <div>
      <br>
      <div class="text-center">
        <button id="submitBtn" type="submit" class="btn btn-primary btn-lg">Create Account</button>
      </div>
    </div>
  </form>
</div>
<div class="col-3"></div>
</div>
  <script src="/js/signup.js"></script>